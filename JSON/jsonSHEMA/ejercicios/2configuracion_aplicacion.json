{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configurador de aplicaciones",
    "description": "Un programica de JSON pa' ver configuraci√≥n del dispositivo y notificaciones",
    "type": "object", 
    "properties": {

      "idioma": { 
        "type": "array",
        "items": {
            "type": "string",
            "enum": ["Espanyol", "Portugues", "Galego"]
        }
      }, 

      "modo": { 
        "type": "array",
        "items": {
            "type": "string",
            "enum": ["normal", "dark"]
        }
      },

      "notis": { 
        "type": "boolean" 
      }
    }, 

    "required": ["idioma", "modo", "notis"]

    
}
